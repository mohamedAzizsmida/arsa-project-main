{% extends 'baseMain.html.twig' %}

{% block title %}Détails du Produit{% endblock %}

{% block body %}
    <section class="product-quantity spad">
        <div class="container">
            <div class="row">
                <!-- Section des images du produit -->
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__pic">
                        <div class="product__details__pic__item">
                            <img class="product__details__pic__item--large" src="{{ asset('uploadsImageProduit/' ~ produit.image) }}" alt="">
                        </div>
                    </div>
                </div>

                <!-- Section des détails du produit -->
                <div class="col-lg-6 col-md-6">
                    <div class="product__details__text">
                        <h3>{{ produit.nom }}</h3>
                        <p>{{ produit.descriptionProduit }}</p>

                        <!-- Affichage de la quantité en stock -->
                        <div class="product__details__stock">
                            <p><b>Quantité en stock :</b> {{ produit.quantiteReelle }}</p>
                        </div>

                        <!-- Form to add product to cart -->
                        <form action="{{ path('add_to_cart', { 'id': produit.idProduit }) }}" method="get">
                            {{ form_start(form, {'method': 'get'}) }}
                            
                            <!-- Sélection de la quantité -->
                            <div class="product__details__quantity">
                                <div class="quantity">
                                    <div class="pro-qty">
                                        {{ form_row(form.quantity) }}
                                    </div>
                                </div>
                            </div>

                            <div>
                                <button type="submit" class="primary-btn">AJOUTER AU PANIER</button>
                            </div>

                            {{ form_end(form) }}
                        </form>

                        <!-- Détails du produit -->
                        <ul>
                            <li><b>Disponibilité</b> <span>{{ produit.quantiteReelle > 0 ? 'En Stock' : 'Rupture de Stock' }}</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
