{# templates/signup/index.html.twig #}
{% extends 'baseMain.html.twig' %}

{% block title %}Register{% endblock %}

{% block styles %}
    <style>
        /* Center the form */
        .signup-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            font-family: Arial, sans-serif;
        }

        /* Title styling */
        .signup-container h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
        }

        /* Form field styling */
        .form-group {
            margin-bottom: 15px;
        }

        /* Style labels */
        .form-group label {
            font-weight: bold;
            color: #555;
            display: block;
            margin-bottom: 5px;
        }

        /* Style input fields */
        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 16px;
            box-sizing: border-box;
        }

        /* Submit button styling */
        .signup-container button {
            width: 100%;
            padding: 12px;
            background-color: #32CD32;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 18px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        /* Button hover effect */
        .signup-container button:hover {
            background-color: #28a745;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="signup-container">
        <h1>Register</h1>
        {{ form_start(signupForm) }}
            <div class="form-group">
                {{ form_label(signupForm.nom) }}
                {{ form_widget(signupForm.nom, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(signupForm.email) }}
                {{ form_widget(signupForm.email, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(signupForm.tel) }}
                {{ form_widget(signupForm.tel, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(signupForm.adress) }}
                {{ form_widget(signupForm.adress, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(signupForm.password.first) }}
                {{ form_widget(signupForm.password.first, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="form-group">
                {{ form_label(signupForm.password.second) }}
                {{ form_widget(signupForm.password.second, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit">Register</button>
        {{ form_end(signupForm) }}
    </div>
{% endblock %}
