    <style>
    .chat-widget {
        position: fixed;
        bottom: 20px;
        right: 20px;
        z-index: 1000;
    }

    .chat-toggle {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background-color: #7fad39;
        border: none;
        color: white;
        font-size: 24px;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

    .chat-toggle:hover {
        transform: scale(1.1);
    }
    
     .chatbox {
        display: none;
        position: fixed;
        bottom: 90px;
        right: 20px;
        width: 300px;
        height: 400px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        flex-direction: column;
    }

    .chat-header {
        background: #7fad39;
        color: white;
        padding: 10px;
        border-radius: 10px 10px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .chat-header h5 {
        margin: 0;
    }
    .chat-close {
        background: none;
        border: none;
        color: white;
        font-size: 20px;
        cursor: pointer;
    }

    .chat-messages {
        flex-grow: 1;
        padding: 10px;
        overflow-y: auto;
        max-height: 300px;
    }

    .message {
        margin: 8px 0;
        padding: 8px 12px;
        border-radius: 15px;
        max-width: 80%;
    }

    .message.bot {
        background: #f0f0f0;
        margin-right: auto;
    }
    .message.user {
        background: #7fad39;
        color: white;
        margin-left: auto;
    }

    .chat-input {
        padding: 10px;
        border-top: 1px solid #eee;
        display: flex;
        gap: 10px;
    }

    .chat-input input {
        flex-grow: 1;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 20px;
