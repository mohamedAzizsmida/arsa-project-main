    <script>
    


        async function handleSubscribe(event) {
        event.preventDefault();
        const emailInput = document.getElementById('subscriberEmail');
        const submitButton = event.target.querySelector('button');
        const messageDiv = document.getElementById('subscriptionMessage');
        
        const originalText = submitButton.innerHTML;
        
        try {
            submitButton.disabled = true;
            submitButton.classList.add('loading');
            submitButton.innerHTML = '<div class="subscribe-loader"></div>';
            messageDiv.className = 'subscription-message';
            
            const response = await fetch('/subscribe', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email: emailInput.value })
            });

            const data = await response.json();

            if (response.ok) {
                messageDiv.textContent = '‚úÖ ' + data.message;
                messageDiv.classList.add('success');
                emailInput.value = '';
            } else {
                messageDiv.textContent = '‚ùå ' + data.message;
                messageDiv.classList.add('error');
            }
            
            messageDiv.style.display = 'block';
            setTimeout(() => {
                messageDiv.style.display = 'none';
            }, 5000);
            
        } catch (error) {
            messageDiv.textContent = '‚ùå An error occurred. Please try again.';
            messageDiv.classList.add('error');
            messageDiv.style.display = 'block';
        } finally {
            submitButton.disabled = false;
            submitButton.classList.remove('loading');
            submitButton.innerHTML = originalText;
        }
        
        return false;
    }
    </script>

