{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    /* Custom CSS for the signup form */
    .signup-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 2rem;
        background-color: #f8f9fa;
    }

    .signup-form {
        background: #fff;
        padding: 2.5rem;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        text-align: center;
    }

    .signup-form h1 {
        margin-bottom: 1.5rem;
        font-size: 2rem;
        color: #333;
        font-weight: 600;
    }

    .signup-form .form-group {
        margin-bottom: 1rem;
        text-align: left;
    }

    .signup-form .form-group label {
        font-weight: bold;
        color: #555;
        display: block;
        margin-bottom: 0.5rem;
    }

    .signup-form .form-group input {
        width: 100%;
        padding: 0.75rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

    .signup-form .form-group input:focus {
        border-color: #7fad39;
        outline: none;
        box-shadow: 0 0 5px rgba(127, 173, 57, 0.5);
    }

    .signup-form button {
        width: 100%;
        padding: 0.75rem;
        background-color: #7fad39;
        border: none;
        color: #fff;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .signup-form button:hover {
        background-color: #6a8f2f;
    }

    .signup-form p {
        margin-top: 1.5rem;
        font-size: 0.9rem;
        color: #666;
    }

    .signup-form a {
        color: #7fad39;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .signup-form a:hover {
        color: #6a8f2f;
    }

    /* Enhanced error message styling */
    .signup-form .alert-danger {
        background-color: #ffebee;
        color: #c62828;
        padding: 1rem;
        border-radius: 5px;
        margin-bottom: 1.5rem;
        border: 1px solid #ffcdd2;
        position: relative;
        animation: shake 0.5s ease-in-out;
    }

    .signup-form .alert-danger::before {
        content: '⚠️'; /* Emoji or icon for visual feedback */
        margin-right: 0.5rem;
    }

    /* Shake animation for error messages */
    @keyframes shake {
        0%, 100% { transform: translateX(0); }
        25% { transform: translateX(-10px); }
        50% { transform: translateX(10px); }
        75% { transform: translateX(-10px); }
    }

    /* Highlight input fields with errors */
    .signup-form .form-control.is-invalid {
        border-color: #c62828;
        background-color: #fff3f3;
    }

    .signup-form .form-control.is-invalid:focus {
        border-color: #c62828;
        box-shadow: 0 0 5px rgba(198, 40, 40, 0.5);
    }

    /* Error messages for individual form fields */
    .signup-form .invalid-feedback {
        color: #c62828;
        font-size: 0.875rem;
        margin-top: 0.25rem;
    }
</style>

<div class="signup-container">
    <div class="signup-form">
        <h1>Register</h1>
        {{ form_start(signupForm) }}
            {% if signupForm.vars.errors|length > 0 %}
                <div class="alert alert-danger">
                    {{ form_errors(signupForm) }}
                </div>
            {% endif %}

            <div class="form-group">
                {{ form_label(signupForm.nom) }}
                {{ form_widget(signupForm.nom, {'attr': {'class': 'form-control ' ~ (signupForm.nom.vars.errors|length ? 'is-invalid' : '')}}) }}
                {% if signupForm.nom.vars.errors|length %}
                    <div class="invalid-feedback">
                        {{ form_errors(signupForm.nom) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(signupForm.email) }}
                {{ form_widget(signupForm.email, {'attr': {'class': 'form-control ' ~ (signupForm.email.vars.errors|length ? 'is-invalid' : '')}}) }}
                {% if signupForm.email.vars.errors|length %}
                    <div class="invalid-feedback">
                        {{ form_errors(signupForm.email) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(signupForm.tel) }}
                {{ form_widget(signupForm.tel, {'attr': {'class': 'form-control ' ~ (signupForm.tel.vars.errors|length ? 'is-invalid' : '')}}) }}
                {% if signupForm.tel.vars.errors|length %}
                    <div class="invalid-feedback">
                        {{ form_errors(signupForm.tel) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(signupForm.adress) }}
                {{ form_widget(signupForm.adress, {'attr': {'class': 'form-control ' ~ (signupForm.adress.vars.errors|length ? 'is-invalid' : '')}}) }}
                {% if signupForm.adress.vars.errors|length %}
                    <div class="invalid-feedback">
                        {{ form_errors(signupForm.adress) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(signupForm.password.first) }}
                {{ form_widget(signupForm.password.first, {'attr': {'class': 'form-control ' ~ (signupForm.password.first.vars.errors|length ? 'is-invalid' : '')}}) }}
                {% if signupForm.password.first.vars.errors|length %}
                    <div class="invalid-feedback">
                        {{ form_errors(signupForm.password.first) }}
                    </div>
                {% endif %}
            </div>

            <div class="form-group">
                {{ form_label(signupForm.password.second) }}
                {{ form_widget(signupForm.password.second, {'attr': {'class': 'form-control ' ~ (signupForm.password.second.vars.errors|length ? 'is-invalid' : '')}}) }}
                {% if signupForm.password.second.vars.errors|length %}
                    <div class="invalid-feedback">
                        {{ form_errors(signupForm.password.second) }}
                    </div>
                {% endif %}
            </div>

            <button type="submit">Register</button>
        {{ form_end(signupForm) }}
        <p class="mt-3">
            Already have an account? <a href="{{ path('app_login') }}">Log in</a>
        </p>
    </div>
</div>
{% endblock %}