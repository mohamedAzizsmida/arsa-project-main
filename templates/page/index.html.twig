<script>

        $(document).ready(function() {
        
        var blogCarousel = $(".blog-carousel").owlCarousel({
            loop: true,
            margin: 30,
            nav: false,
            dots: false,
            autoplay: true,
            autoplayTimeout: 5000,
            autoplayHoverPause: true,
            responsive: {
                0: { items: 1 },
                768: { items: 2 },
                992: { items: 3 }
            },
                       
            onInitialized: function() {
                $('.blog-carousel video').each(function() {
                    $(this)[0].pause();
                });
            }
        });
        $('.blog-carousel video').on('play', function() {
            blogCarousel.trigger('stop.owl.autoplay');
            
            $('.blog-carousel video').not(this).each(function() {
                $(this)[0].pause();
            });
        });

        $('.blog-carousel video').on('pause ended', function() {
            
            blogCarousel.trigger('play.owl.autoplay', [5000]);
        });

       
        blogCarousel.on('changed.owl.carousel', function() {
            
            $('.blog-carousel video').each(function() {
                $(this)[0].pause();
            });
        });
    });



    $(document).ready(function() {
        
        var mixer = mixitup('.featured__filter');
        
        
        $('.featured__controls li').on('click', function() {
            $('.featured__controls li').removeClass('active');
            $(this).addClass('active');
        });

        
        $('.set-bg').each(function() {
            var bg = $(this).data('setbg');
            $(this).css('background-image', 'url(' + bg + ')');
        });

        
        $('.add-to-favorites').on('click', function(e) {
            e.preventDefault();
            $(this).find('i').toggleClass('active');
            
        });

        $('.show-event-details').on('click', function(e) {
    e.preventDefault();
    const eventId = $(this).data('event-id');
    const modal = new bootstrap.Modal(document.getElementById('eventDetailsModal'));

    $.ajax({
        url: `/event/${eventId}`,
        method: 'GET',
        success: function(data) {
            
            $('#eventDetailsModalLabel').text(data.name);
            $('#eventName').text(data.name);
            $('#eventPrice').text('$' + parseFloat(data.price).toFixed(2));
            $('#eventType').text(data.type);
            $('#eventDate').text(new Date(data.eventDate).toLocaleDateString());
            $('#eventLocation').text(`${data.location.name}, ${data.location.country}`);
            $('#eventAssociation').text(data.association.name);
            
            
            if (data.location.youtubeUrl) {
                $('#eventVideo').attr('src', data.location.youtubeUrl);
                $('.event-video-container').show();
            } else {
                $('.event-video-container').hide();
            }

const countryName = encodeURIComponent(data.location.country);

fetch(`https://nominatim.openstreetmap.org/search?format=json&q=${countryName}&limit=1`)
    .then(response => response.json())
    .then(result => {
        if (result && result.length > 0) {
            const lat = parseFloat(result[0].lat);
            const lon = parseFloat(result[0].lon);
            const bbox = result[0].boundingbox;
            
            
            const mapHtml = `
                <iframe
                    width="100%"
                    height="300"
                    frameborder="0"
                    style="border:0; border-radius:8px;"
                    src="https://www.openstreetmap.org/export/embed.html?bbox=${lon-1},${lat-1},${lon+1},${lat+1}&layer=mapnik&marker=${lat},${lon}">
                </iframe>
            `;
            $('#eventMap').html(mapHtml);
        }
    })
    .catch(error => {
        console.error('Error loading map:', error);
        $('#eventMap').html('<p>Error loading map</p>');
    });

            
            modal.show();
            $('#eventDonateBtn').attr('href', `/add-to-cart/event/${data.id}`);
        },
        error: function() {
            alert('Error loading event details');
        }
    });
});


