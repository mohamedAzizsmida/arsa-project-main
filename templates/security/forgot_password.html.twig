{% extends 'base.html.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block body %}
<style>
    .forgot-password-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 2rem;
        background-color: #f8f9fa;
    }

    .forgot-password-form {
        background: #fff;
        padding: 2.5rem;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 400px;
        text-align: center;
    }

    .forgot-password-form h1 {
        margin-bottom: 1.5rem;
        font-size: 2rem;
        color: #333;
        font-weight: 600;
    }

    .forgot-password-form .form-control {
        width: 100%;
        padding: 0.75rem;
        margin-bottom: 1rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

    .forgot-password-form .form-control:focus {
        border-color: #7fad39;
        outline: none;
        box-shadow: 0 0 5px rgba(127, 173, 57, 0.5);
    }

    .forgot-password-form button {
        width: 100%;
        padding: 0.75rem;
        background-color: #7fad39;
        border: none;
        color: #fff;
        font-size: 1rem;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .forgot-password-form button:hover {
        background-color: #6a8f2f;
    }

    .forgot-password-form p {
        margin-top: 1.5rem;
        font-size: 0.9rem;
        color: #666;
    }

    .forgot-password-form a {
        color: #7fad39;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .forgot-password-form a:hover {
        color: #6a8f2f;
    }
</style>

<div class="forgot-password-container">
    <div class="forgot-password-form">
        <h1>Forgot Password</h1>
        <form method="post">
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Reset Password</button>
        </form>
        <p class="mt-3">
            Remember your password? <a href="{{ path('app_login') }}">Log in</a>
        </p>
    </div>
</div>
{% endblock %}