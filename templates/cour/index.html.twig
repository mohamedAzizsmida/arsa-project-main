                            <p><strong>Formation:</strong> {{ Cour.getFormation.titre }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <a href="{{ path('app_cour_edit', {'id': Cour.getIdCour}) }}" class="btn btn-secondary btn-sm">Edit</a>
