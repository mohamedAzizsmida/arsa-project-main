{% extends 'baseMain.html.twig' %}

{% block title %}Détails de la commande{% endblock %}

{% block body %}
    <!-- Section de la barre de navigation -->
    <section class="breadcrumb-section set-bg" data-setbg="{{ asset('img/breadcrumb.jpg') }}">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        <h2>Détails de la commande</h2>
                        <div class="breadcrumb__option">
                        <div>
                            <span><strong>ID Commande:</strong> {{ commande.getIdCommande() }} <span>
</div>
<div>
                            <span><strong>Date de Commande:</strong> {{ commande.getDateCommande()|date('d/m/Y') }}</span>
                            </div>
                        </div>
                      
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Section de la barre de navigation fin -->

    <div class="container viewCommand">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Produits</th>
                                <th>Quantité</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            {% set totalOrder = 0 %}
                            {% for item in commande.commandeProduits %}
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="{{ asset('uploadsImageProduit/' ~ item.produit.image) }}" alt="" width="100">
                                        <h5>{{ item.produit.nom }}</h5>
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <p>{{ item.quantite }}</p>
                                        </div>
                                    </td>
                                  
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row justify-content-end">
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Résumé de la commande</h5>
                    <ul>
                        <li>Total <span>{{ commande.commandeProduits|length }} articles</span></li>
                      
                    </ul>
                                       <a href="{{ path('historique_commandes') }}" class="primary-btn">Retour au historique commande</a> 
                </div>
            </div>
        </div>
    </div>
{% endblock %}
